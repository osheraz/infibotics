<launch>
  <!--Include description and control launch files-->
  <include file="$(find infi_sim_v1)/launch/main.launch">
    <arg name="lidar" value="true"/>
    <arg name="depth_cam" value="true"/>
    <arg name="gazebo" value="true"/>
  </include>

  <!-- cloud transformer - transfrom PCL from camera_link to base_footprint -->
  <node name="cloud_transformer" pkg="infi_perception" type="cloud_transformer" respawn="false"/>

  <!-- launch rviz-->
  <!--node name="$(anon rviz)" pkg="rviz" type="rviz" respawn="false"
    output="screen" args="-d $(find infi_perception)/config/perception.rviz"/-->

  <!-- The feature extractor node -->
  <node name="feature_extractor" pkg="infi_perception" type="feature_extractor" respawn="false"/>

</launch>
